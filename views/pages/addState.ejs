<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='../../public/images/' type="images">

    <title>country-Portal</title>
    <style>
        .body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-evenly;
            background-color: orange;
        }

        .page {
            /* background: url('../../public/images/image.png') no-repeat center fixed;
            background-size: cover; */
            /* background-image: url('../../public/images/image.png'); */
            width: 500px;
            height: 500px;
            display: flex;
            align-items: center;
            justify-content: space-around;

        }

        .inputBox {

            backdrop-filter: blur(8px);
            width: 300px;
            height: 400px;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            border-radius: 30px;
            box-shadow: 50px;
            box-shadow: 10px 10px 5px rgb(159, 158, 158);
            transition: 0.5s;
            background-color: oldlace

        }

        .submit-button {
            background-color: #ddd;
            border: none;
            color: black;
            padding: 16px 28px;
            text-align: center;
            font-size: 12px;
            transition: 0.3s;
        }

        .submit-button:hover {
            background-color: green;
            color: white;
            border-radius: 20px;
        }

        .cancel-button {
            background-color: #ddd;
            border: none;
            color: black;
            padding: 16px 28px;
            text-align: center;
            font-size: 12px;
            transition: 0.3s;
        }

        .cancel-button:hover {
            background-color: orangered;
            color: white;
            border-radius: 20px;
        }

        .input-margin {
            margin-left: 10px;
        }

        .input:hover {
            border-radius: 10px;
            border-color: rgb(172, 83, 83);
        }
    </style>
</head>

<body class="body">
    <div class="font">
        <h1><%=pageName %> State</h1>
    </div>
    <div class="page">
        <div class="inputBox ">
            <div class="input1">
                <div class="drop-down">
                    <label for="country">  country :</label>
                    <select name="country" id="country" value="<%=data.name %>">
                        <option>Select Country</option>
                        <% for(var i=0;i< result.length;i++){ %>
                        <option value="<%=result[i].id %>"><%=result[i].name %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="input1">
                <label for="name" class="label-name">State Name : </label>
                <input type="text" id="name" name="name" class="input" value="<%=data.stateName %>">
                <input type="hidden" id="stateId" name="stateId" class="input" value="<%=data.id %>">
            </div>
            <div class="buttons">
                <button type="button" class="cancel-button" onclick="cancel()">cancel</button>
                <button type="button" class="submit-button" onclick="addState()">submit</button>
            </div>
        </div>
    </div>
    <script>
        function addState() {
            const myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");
            
            var id = document.querySelector('#country').value;
            var name = document.getElementById('name').value;
            var stateId = document.getElementById('stateId').value;
            const raw = JSON.stringify({
                "countryId": id,
                "stateName": name
            });

            const requestOptions = {
                headers: myHeaders,
                body: raw,
                redirect: "follow"
            };

            let request
            if (stateId === '') {
                request = fetch("http://localhost:3000/api/state", { ...requestOptions, method: "POST", })
            }else {
                request = fetch("http://localhost:3000/api/state/"+stateId, {...requestOptions,method: "PUT",})
            }
                request.then((response) => response.text())
                .then(window.location.replace('http://localhost:3000/state'))
                .catch((error) => console.error(error));
        }
        function cancel() {
            window.location.replace('http://localhost:3000/state')
        }
    </script>
</body>

</html>